<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deep Insights Hub</title>
  <style>
    :root {
      --bg: #0e141b;
      --panel: #141d26;
      --text: #e6edf3;
      --muted: #9bb0c1;
      --accent: #4fd1c5;
      --accent-2: #f59e0b;
      --border: #243140;
    }
    body {
      margin: 0;
      font-family: "Space Grotesk", "IBM Plex Sans", sans-serif;
      background: radial-gradient(circle at top, #1a2432, #0e141b 55%);
      color: var(--text);
    }
    header {
      padding: 32px 48px;
      border-bottom: 1px solid var(--border);
    }
    header h1 {
      margin: 0 0 8px 0;
      font-size: 28px;
      letter-spacing: 0.5px;
    }
    header p {
      margin: 0;
      color: var(--muted);
    }
    .filters {
      display: flex;
      gap: 12px;
      margin: 16px 0 24px;
      flex-wrap: wrap;
    }
    .filters input,
    .filters select {
      background: #0f1822;
      border: 1px solid var(--border);
      color: var(--text);
      padding: 8px 12px;
      border-radius: 10px;
      font-size: 14px;
      min-width: 180px;
    }
    main {
      display: grid;
      grid-template-columns: 1.2fr 0.8fr;
      gap: 24px;
      padding: 32px 48px 64px;
    }
    section {
      background: var(--panel);
      padding: 24px;
      border-radius: 16px;
      border: 1px solid var(--border);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
    }
    h2 {
      margin-top: 0;
      font-size: 18px;
      letter-spacing: 0.4px;
    }
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    li {
      padding: 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }
    li:last-child {
      border-bottom: none;
    }
    .score {
      color: var(--accent);
      font-weight: 600;
    }
    .pill {
      background: rgba(79, 209, 197, 0.12);
      color: var(--accent);
      padding: 2px 8px;
      border-radius: 999px;
      font-size: 12px;
    }
    .delta {
      font-size: 12px;
      color: var(--muted);
      margin-left: 6px;
    }
    .memo-link {
      display: flex;
      justify-content: space-between;
      gap: 16px;
      padding: 12px 0;
      cursor: pointer;
      color: var(--text);
      text-decoration: none;
    }
    .memo-link:hover {
      color: var(--accent);
    }
    .muted {
      color: var(--muted);
      font-size: 14px;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 16px;
    }
    .card {
      background: #0f1822;
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 12px 14px;
    }
    .card h3 {
      margin: 0 0 8px 0;
      font-size: 14px;
      color: var(--muted);
    }
    .card p {
      margin: 0;
      font-size: 16px;
    }
    @media (max-width: 960px) {
      main {
        grid-template-columns: 1fr;
        padding: 24px;
      }
      header {
        padding: 24px;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Deep Insights Hub</h1>
    <p>Daily AI landscape brief and top-scoring thematic memos</p>
    <p class="muted">Date: {{ report_date }}</p>
    {% if prev_date %}
    <p class="muted">Comparison baseline: {{ prev_date }}</p>
    {% endif %}
  </header>
  <main>
    <section>
      <h2>Top Memos</h2>
      <div class="filters">
        <input id="memoSearch" type="search" placeholder="Search memos">
        <select id="verticalFilter">
          <option value="">All verticals</option>
        </select>
        <select id="aspectFilter">
          <option value="">All aspects</option>
        </select>
      </div>
      <ul class="memo-list">
        {% for memo in memos %}
        <li class="memo-item" data-theme="{{ memo.theme_id }}" data-verticals="{{ memo.verticals|join(',') }}" data-aspects="{{ memo.aspects|join(',') }}">
          <a class="memo-link" href="{{ memo.link }}">
            <div>
              <div>{{ memo.theme_id }}</div>
              <div class="muted">{{ memo.summary }}</div>
            </div>
            <div class="score">{{ "%.2f"|format(memo.aggregate_score) }}</div>
          </a>
        </li>
        {% endfor %}
      </ul>
    </section>
    <section>
      <h2>Landscape Rankings</h2>
      <div class="grid">
        <div class="card">
          <h3>Verticals</h3>
          {% for item in top_verticals %}
          <p>{{ item.id }} <span class="pill">{{ "%.1f"|format(item.score) }}</span>
            {% if item.delta is defined %}
              {% if item.delta > 0 %}
                <span class="delta">▲ {{ item.delta }}</span>
              {% elif item.delta < 0 %}
                <span class="delta">▼ {{ item.delta|abs }}</span>
              {% else %}
                <span class="delta">• 0</span>
              {% endif %}
            {% endif %}
          </p>
          {% endfor %}
        </div>
        <div class="card">
          <h3>Aspects</h3>
          {% for item in top_aspects %}
          <p>{{ item.id }} <span class="pill">{{ "%.1f"|format(item.score) }}</span>
            {% if item.delta is defined %}
              {% if item.delta > 0 %}
                <span class="delta">▲ {{ item.delta }}</span>
              {% elif item.delta < 0 %}
                <span class="delta">▼ {{ item.delta|abs }}</span>
              {% else %}
                <span class="delta">• 0</span>
              {% endif %}
            {% endif %}
          </p>
          {% endfor %}
        </div>
        <div class="card">
          <h3>Companies</h3>
          {% for item in top_companies %}
          <p>{{ item.ticker }} <span class="pill">{{ "%.1f"|format(item.score) }}</span>
            {% if item.delta is defined %}
              {% if item.delta > 0 %}
                <span class="delta">▲ {{ item.delta }}</span>
              {% elif item.delta < 0 %}
                <span class="delta">▼ {{ item.delta|abs }}</span>
              {% else %}
                <span class="delta">• 0</span>
              {% endif %}
            {% endif %}
          </p>
          {% endfor %}
        </div>
      </div>
    </section>
  </main>
  <script>
    const memoItems = Array.from(document.querySelectorAll('.memo-item'));
    const searchInput = document.getElementById('memoSearch');
    const verticalFilter = document.getElementById('verticalFilter');
    const aspectFilter = document.getElementById('aspectFilter');

    const verticalSet = new Set();
    const aspectSet = new Set();

    memoItems.forEach(item => {
      const verticals = item.dataset.verticals ? item.dataset.verticals.split(',') : [];
      const aspects = item.dataset.aspects ? item.dataset.aspects.split(',') : [];
      verticals.filter(Boolean).forEach(v => verticalSet.add(v));
      aspects.filter(Boolean).forEach(a => aspectSet.add(a));
    });

    Array.from(verticalSet).sort().forEach(v => {
      const opt = document.createElement('option');
      opt.value = v;
      opt.textContent = v;
      verticalFilter.appendChild(opt);
    });

    Array.from(aspectSet).sort().forEach(a => {
      const opt = document.createElement('option');
      opt.value = a;
      opt.textContent = a;
      aspectFilter.appendChild(opt);
    });

    function applyFilters() {
      const query = (searchInput.value || '').toLowerCase();
      const vert = verticalFilter.value;
      const asp = aspectFilter.value;

      memoItems.forEach(item => {
        const theme = item.dataset.theme.toLowerCase();
        const summary = item.querySelector('.muted')?.textContent?.toLowerCase() || '';
        const verticals = item.dataset.verticals ? item.dataset.verticals.split(',') : [];
        const aspects = item.dataset.aspects ? item.dataset.aspects.split(',') : [];

        const matchesQuery = !query || theme.includes(query) || summary.includes(query);
        const matchesVert = !vert || verticals.includes(vert);
        const matchesAsp = !asp || aspects.includes(asp);

        item.style.display = (matchesQuery && matchesVert && matchesAsp) ? '' : 'none';
      });
    }

    searchInput.addEventListener('input', applyFilters);
    verticalFilter.addEventListener('change', applyFilters);
    aspectFilter.addEventListener('change', applyFilters);
  </script>
</body>
</html>
