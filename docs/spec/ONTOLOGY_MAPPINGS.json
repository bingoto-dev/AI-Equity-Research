  "source_field_mappings": {
    "sec_edgar": {
      "fields": [
        "cik",
        "company_name",
        "ticker",
        "form_type",
        "filing_date",
        "accession",
        "filing_url",
        "section",
        "excerpt"
      ],
      "mapping_rules": {
        "company_id": "CMP-<ticker>",
        "evidence.entity_type": "company",
        "evidence.summary": "excerpt"
      }
    },
    "macro_release": {
      "fields": [
        "series_id",
        "indicator_name",
        "observation_date",
        "value",
        "unit",
        "frequency"
      ],
      "mapping_rules": {
        "macro_indicator_id": "MAC-<slug>",
        "signal.entity_type": "macro_indicator"
      }
    },
    "market_data": {
      "fields": [
        "ticker",
        "date",
        "open",
        "high",
        "low",
        "close",
        "volume"
      ],
      "mapping_rules": {
        "company_id": "CMP-<ticker>",
        "signal.entity_type": "company"
      }
    },
    "news": {
      "fields": [
        "source_name",
        "title",
        "description",
        "published_at",
        "url"
      ],
      "mapping_rules": {
        "evidence.entity_type": "theme_or_company",
        "policy_event_id": "POL-<yyyymmdd>-<region>-<slug>"
      }
    }
  },
